<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LetsTalk"
             x:Class="LetsTalk.MainPage"
             Title="Вход">
    <ContentPage.Content>
    <StackLayout Padding="5,5,5,5">
        <Label Text="Let's Taklk" TextColor="#000" FontSize="48" HorizontalOptions="Center" Margin="30" ></Label>
            <Entry x:Name="LoginField" TextColor="#000" Placeholder="Введите Логин"></Entry>
            <Entry x:Name="PassField" TextColor="#000" Placeholder="Введите Пароль"></Entry>
            <!--<Button Clicked="SignUpButtonClik" FontAttributes="Bold" x:Name="SignUpButton" Text="Продолжить" WidthRequest="300" HorizontalOptions="Center"></Button>-->
        <Button x:Name="InButton" Clicked="InButton_Clicked" FontAttributes="Bold" Text="Продолжить" WidthRequest="300" HorizontalOptions="Center"></Button>
        <Button x:Name="RegButton" Clicked="RegButton_Clicked" FontAttributes="Bold" Text="Зарегестрироваться!" WidthRequest="300" HorizontalOptions="Center"></Button>
       </StackLayout>
    </ContentPage.Content>
</ContentPage>
